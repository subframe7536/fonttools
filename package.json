{
  "name": "@subframe7536/fonttools",
  "type": "module",
  "version": "0.0.0",
  "description": "[ESM only] fonttools for nodejs or web powered by pyodide, compatible with Vite",
  "author": "subframe7536",
  "license": "MIT",
  "repository": "https://github.com/subframe7536/fonttools",
  "bugs": "https://github.com/subframe7536/fonttools/issues",
  "keywords": [
    "fonttools",
    "pyodide",
    "font"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./web": {
      "types": "./dist/web.d.ts",
      "import": "./dist/web.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js"
    }
  },
  "module": "dist/index.js",
  "typesVersions": {
    "*": {
      "web": [
        "./dist/web.d.ts"
      ],
      "utils": [
        "./dist/utils.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite serve playground",
    "lint": "tsc --noEmit && eslint . --max-warnings 0",
    "format": "eslint . --fix",
    "build": "node build.js",
    "release": "pnpm test && pnpm run build && bumpp --all && npm publish",
    "test": "vitest --run",
    "bench": "pnpm run build && vitest bench --run"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@subframe7536/eslint-config": "^0.9.6",
    "@subframe7536/type-utils": "^0.1.6",
    "@types/node": "^20.17.3",
    "bumpp": "^9.8.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "eslint": "^9.13.0",
    "pyodide": "^0.26.3",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.4"
  }
}
